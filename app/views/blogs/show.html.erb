<%- model_class = Blog -%>
<div class="page-header">
  <h1><%= @blog.title %> <small><%=l @blog.created_at, format: :short %></small></h1>
</div>

<%= content_tag :div, @blog.body, data: { markdown: @blog.body } %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    blogs_path, :class => 'btn'  %>
  <% if admin_signed_in? %>
    <%= link_to t('.edit_html', :default => t("helpers.links.edit_html")),
      edit_blog_path(@blog), :class => 'btn' %>
    <%= link_to t('.destroy_html', :default => t("helpers.links.destroy_html")),
      blog_path(@blog),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
  <% end %>
</div>
