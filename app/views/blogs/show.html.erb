<%- model_class = Blog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @blog.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @blog.body %></dd>
</dl>

<% if admin_signed_in? %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
      blogs_path, :class => 'btn'  %>
    <%= link_to t('.edit_html', :default => t("helpers.links.edit_html")),
      edit_blog_path(@blog), :class => 'btn' %>
    <%= link_to t('.destroy_html', :default => t("helpers.links.destroy_html")),
      blog_path(@blog),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
  </div>
<% end %>
