<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <p>
    <strong><%= model_class.human_attribute_name(:email) %>:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:first_name) %>:</strong>
    <%= @user.first_name %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:last_name) %>:</strong>
    <%= @user.last_name %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:student_identification_number) %>:</strong>
    <%= @user.student_identification_number %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:identification_number) %>:</strong>
    <%= @user.identification_number %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:major) %>:</strong>
    <%= @user.major %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:minor) %>:</strong>
    <%= @user.minor %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:phone_number) %>:</strong>
    <%= @user.phone_number %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:mobile_number) %>:</strong>
    <%= @user.mobile_number %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:birth_date) %>:</strong>
    <%= @user.birth_date %>
  </p>
  <p>
    <strong><%= model_class.human_attribute_name(:father_name) %>:</strong>
    <%= @user.father_name %>
  </p>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admins_users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit_html")),
              edit_admins_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy_html")),
              admins_user_path(@user),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm")),
              :class => 'btn btn-danger' %>
</div>
