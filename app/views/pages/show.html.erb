<%- model_class = Page -%>
<div class="page-header">
  <h1><%= @page.title %></h1>
</div>

<%= content_tag :div, @page.content, data:{markdown: @page.content} %>

<% if admin_signed_in? %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
      pages_path, :class => 'btn' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit_html")),
      edit_page_path(@page), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy_html")),
      page_path(@page),
      :method => 'delete',
      :confirm => t('.confirm', :default => t("helpers.links.confirm")),
      :class => 'btn btn-danger' %>
  </div>
<% end %>
